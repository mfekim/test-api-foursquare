<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <!-- Best Photo -->
    <ImageView
        android:id="@+id/venue_best_photo"
        android:layout_width="@dimen/mf_venue_best_photo_width"
        android:layout_height="@dimen/mf_venue_best_photo_height"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:contentDescription=""
        tools:background="@android:color/darker_gray"/>

    <!-- Name -->
    <TextView
        android:id="@+id/venue_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/venue_best_photo"
        android:layout_centerHorizontal="true"
        tools:text="Koolica - partage et confiance"/>

    <!-- Description -->
    <TextView
        android:id="@+id/venue_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/venue_name"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:textStyle="italic"
        tools:text="Une longue description sera affichée à cette emplacement"/>

    <!-- Address -->
    <TextView
        android:id="@+id/venue_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/venue_description"
        android:layout_marginBottom="5dp"
        tools:text="Adresse : mon adress"/>

    <!-- Phone -->
    <TextView
        android:id="@+id/venue_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/venue_address"
        android:layout_marginBottom="5dp"
        tools:text="Téléphone : 0202020202"/>

    <!-- Twitter -->
    <TextView
        android:id="@+id/venue_twitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/venue_phone"
        android:layout_marginBottom="5dp"
        tools:text="Twitter : @mfekim"/>

    <!-- Rating -->
    <TextView
        android:id="@+id/venue_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/venue_twitter"
        android:layout_marginBottom="5dp"
        tools:text="Note : 8.8 sur 10"/>

</RelativeLayout>